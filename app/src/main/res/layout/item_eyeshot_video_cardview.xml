<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_height="240dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="240dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
                android:id="@+id/custom_videoplayer_standard"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
            <ImageView
                android:layout_width="14.5dp"
                android:layout_height="14.5dp"
                android:layout_marginBottom="9dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/view_count"
                android:id="@+id/imageView12"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="5000次播放"
                android:layout_marginLeft="2dp"
                android:id="@+id/tv_video_play_count"
                android:layout_alignTop="@+id/imageView12"
                android:layout_toRightOf="@+id/imageView12"
                android:layout_toEndOf="@+id/imageView12" />

            <TextView
                android:id="@+id/tv_video_publish_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-08-23 07:14:45"
                style="@style/Text_Content"
                android:layout_marginRight="10dp"
                android:layout_alignBottom="@+id/tv_video_play_count"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginRight="2dp"
                android:src="@drawable/time"
                android:layout_alignTop="@+id/tv_video_publish_time"
                android:layout_toLeftOf="@+id/tv_video_publish_time"
                android:layout_toStartOf="@+id/tv_video_publish_time" />

            <ImageView
                android:id="@+id/iv_news_item_divider"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#ccc"

                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>