<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="240dp">
    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="240dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
                android:id="@+id/custom_videoplayer_standard"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
            <TextView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5000次播放"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/tv_video_play_count" />

            <Button
                android:layout_marginBottom="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/discuss"
                android:scaleType="fitXY"
                android:id="@+id/bt_discuss_eyeshot_video"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />
            <TextView
                android:id="@+id/tv_video_discuss_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3056"
                style="@style/Text_Content"
                android:layout_alignBottom="@+id/bt_discuss_eyeshot_video"
                android:layout_toRightOf="@+id/bt_discuss_eyeshot_video"
                android:layout_toEndOf="@+id/bt_discuss_eyeshot_video" />
            <Button
                android:id="@+id/bt_video_share"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/share"
                android:layout_alignBottom="@+id/tv_video_discuss_count"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>