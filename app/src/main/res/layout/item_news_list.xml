<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="?android:attr/selectableItemBackground"
    >
    <ImageView
        android:id="@+id/iv_news_small_pic"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:src="@drawable/loading_s"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/iv_news_item_divider"
        android:layout_alignEnd="@+id/iv_news_item_divider" />
    <TextView
        android:id="@+id/tv_news_list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="看宝强自己开和给老婆开的车就知道，这段婚姻谁更付出"
        android:maxLines="2"
        android:layout_marginRight="10dp"
        android:ellipsize="end"
        android:textSize="16sp"
        android:textColor="#414142"
        android:layout_alignTop="@+id/iv_news_small_pic"
        android:layout_alignLeft="@+id/iv_news_item_divider"
        android:layout_alignStart="@+id/iv_news_item_divider"
        android:layout_toLeftOf="@+id/iv_news_small_pic"
        android:layout_toStartOf="@+id/iv_news_small_pic" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="来源：娱乐潘多拉"
        android:textSize="13sp"
        android:id="@+id/tv_news_list_item_resource"
        android:layout_alignBaseline="@+id/tv_news_list_discuss_count"
        android:layout_alignBottom="@+id/tv_news_list_discuss_count"
        android:layout_alignLeft="@+id/iv_news_item_divider"
        android:layout_alignStart="@+id/iv_news_item_divider" />


        <ImageView
            android:id="@+id/iv_news_list_item_discuss"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginRight="2dp"
            android:src="@drawable/discuss"
            android:layout_alignTop="@+id/tv_news_list_discuss_count"
            android:layout_toLeftOf="@+id/tv_news_list_discuss_count"
            android:layout_toStartOf="@+id/tv_news_list_discuss_count" />

        <TextView
            android:id="@+id/tv_news_list_discuss_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.5万"
            android:textColor="#a9b7b7"
            android:textSize="8sp"
            android:layout_marginRight="10dp"
            android:layout_alignBottom="@+id/iv_news_small_pic"
            android:layout_toLeftOf="@+id/iv_news_small_pic"
            android:layout_toStartOf="@+id/iv_news_small_pic" />
    <ImageView
        android:id="@+id/iv_news_item_divider"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#ccc"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

</RelativeLayout>