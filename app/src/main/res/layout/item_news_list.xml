<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="90dp">
    <ImageView
        android:id="@+id/iv_news_small_pic"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:src="@drawable/b"
        android:scaleType="fitXY"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        />
    <TextView
        android:id="@+id/tv_news_list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="中共第十八届六中全会将召开"
        android:layout_marginRight="15dp"
        android:maxLength="13"
        android:singleLine="true"
        android:textSize="17sp"
        android:textColor="#000"
        android:layout_alignTop="@+id/iv_news_small_pic"
        android:layout_toEndOf="@+id/iv_news_small_pic" />

    <TextView
        android:id="@+id/tv_news_list_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10月份北京召开，分析经济形势，部署下半年经济工作"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:minLines="2"
        android:maxLines="2"
        android:maxLength="25"
        android:ellipsize="end"
        android:layout_below="@+id/tv_news_list_item_title"
        android:layout_alignStart="@+id/tv_news_list_item_title" />

        <ImageView
            android:id="@+id/iv_news_item_discuss"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/discuss"
            android:layout_alignBottom="@+id/iv_news_list_discuss_count"
            android:layout_toStartOf="@+id/iv_news_list_discuss_count" />

        <TextView
            android:id="@+id/iv_news_list_discuss_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.5万"
            android:textColor="#a9b7b7"
            android:textSize="8sp"
            android:layout_marginRight="15dp"
            android:layout_alignBottom="@+id/iv_news_small_pic"
            android:layout_alignParentRight="true" />
    <ImageView
        android:id="@+id/iv_news_item_divider"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#ccc"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>