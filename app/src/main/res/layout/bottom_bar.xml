<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_alignParentBottom="true"
    >
    <ImageView
        android:id="@+id/bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:src="#ccc"

        />
    <RadioGroup
        android:id="@+id/tab"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"

        >
        <RadioButton
            android:id="@+id/bottom_hot_news"
            style="@style/bottom_tab"
            android:drawableTop="@drawable/bottom_everyday_news_selector"
            android:text="热门"
            android:checked="true"
            />
        <RadioButton
            android:id="@+id/bottom_eyeshot_news"
            style="@style/bottom_tab"
            android:drawableTop="@drawable/bottom_eyeshot_selector"
            android:text="视界"
            />
        <RadioButton
            android:id="@+id/bottom_before_bed_news"
            style="@style/bottom_tab"
            android:drawableTop="@drawable/bottom_before_bed_news_selector"
            android:text="睡前"
           />
        <RadioButton
            android:id="@+id/bottom_personal_center"
            style="@style/bottom_tab"
            android:drawableTop="@drawable/bottom_personal_center_selector"
            android:text="我的"
            />
    </RadioGroup>

</LinearLayout>